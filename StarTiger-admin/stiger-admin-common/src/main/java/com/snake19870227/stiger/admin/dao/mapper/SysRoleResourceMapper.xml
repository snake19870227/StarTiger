<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.snake19870227.stiger.admin.dao.mapper.SysRoleResourceMapper">
    <resultMap id="base" type="com.snake19870227.stiger.admin.entity.po.SysRoleResource">
        <id column="role_res_id" property="roleResId"/>
        <result column="role_id" property="roleId"/>
        <result column="role_code" property="roleCode"/>
        <result column="res_id" property="resId"/>
        <result column="res_code" property="resCode"/>
    </resultMap>

    <select id="getAll" resultMap="base">
        select * from sys_role_resource
    </select>

    <select id="queryByResourceId" resultMap="base">
        select * from sys_role_resource where res_id = #{resId}
    </select>
</mapper>