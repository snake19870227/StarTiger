<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.snake19870227.stiger.admin.dao.mapper.SysUserMapper">
    <resultMap id="base" type="com.snake19870227.stiger.admin.entity.po.SysUser">
        <id column="user_id" property="userId" />
        <result column="username" property="username" />
        <result column="encode_password" property="encodePassword" />
    </resultMap>

    <select id="queryByUsername" resultMap="base">
        select * from sys_user where username = #{username}
    </select>
</mapper>